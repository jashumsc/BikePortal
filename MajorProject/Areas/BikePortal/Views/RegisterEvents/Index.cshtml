@model IEnumerable<MajorProject.Models.RegisterEvent>

@{
    ViewData["Title"] = "Index";
}

<h1>Fill Details to Register</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParticipateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpcomingEvent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpcomingEvent.EventDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParticipateId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ParticipateId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ParticipateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
