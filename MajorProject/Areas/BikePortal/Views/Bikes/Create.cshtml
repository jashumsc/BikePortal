@model MajorProject.Models.Bike

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bike</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BikeName" class="control-label"></label>
                <input asp-for="BikeName" class="form-control" />
                <span asp-validation-for="BikeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class ="form-control" asp-items="ViewBag.CompanyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BikePrice" class="control-label"></label>
                <input asp-for="BikePrice" class="form-control" />
                <span asp-validation-for="BikePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentPrice" class="control-label"></label>
                <input asp-for="RentPrice" class="form-control" />
                <span asp-validation-for="RentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BikeMileage" class="control-label"></label>
                <input asp-for="BikeMileage" class="form-control" />
                <span asp-validation-for="BikeMileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BikePhoto" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="BikePhoto" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label" for="customFile">Choose File</label>

                </div>
                <span asp-validation-for="BikePhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
